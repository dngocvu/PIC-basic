#define S1     PIN_A0
#define S2     PIN_A1
#define S3     PIN_A2
#define S4     PIN_A3
#include <main1.h>
#use    rs232(baud=9600, xmit=PIN_C6, rcv=PIN_C7, uart1)
//#use rs232(baud=9600,uart1)

CHAR S1_state=0;
CHAR S2_state=0;
CHAR S3_state=0;
CHAR S4_state=0;
CHAR c = ("MCU READY");
void main()
{
   set_tris_d(0x00);
   output_d(0xff);
   set_tris_b(0x00);
   output_b(0xff);
   delay_ms(10);
   putc(c);
   while(TRUE)
   {  
      if(kbhit())
      {
            printf("PC READY\r");
            getch();
            output_b(0xc0);
            output_d(0xc0);
      }
      //TODO: User Code

}
}
