
#include <main8.h>

#define S1     pin_D0
#define S2     pin_D1
#define LED1   pin_D3
#define LED2   pin_D4
#define LED3   pin_D5

char xuat=0;
char dem=0;

void main()
{
   set_tris_d(0b11000111);
   output_bit(LED1,0);
   output_bit(LED2,0);
   output_bit(LED3,0);
   
   while(TRUE)
   {
      set_tris_d(0b11000111);
 
   while(TRUE)
   {
      // input 
      if ((dem==0)&(input(S1)==1)) dem=1;
      if ((dem==1)&(input(S1)==0)) dem=2;
      if ((dem==2)&(input(S1)==1)) dem=3;
      if ((dem==3)&(input(S1)==0)) dem=4;
      if ((dem==4)&(input(S1)==1)) dem=5;
      if ((dem==5)&(input(S1)==0)) dem=6;
      if ((dem==6)&(input(S1)==1)) dem=7;
      if ((dem==7)&(input(S1)==0)) dem=0;
      
      // Control
      if (dem==0) xuat=0;
      if (dem==1) xuat=0;
      if (dem==2) xuat=1;
      if (dem==3) xuat=1;
      if (dem==4) xuat=2;
      if (dem==5) xuat=2;
      if (dem==6) xuat=3;
      if (dem==7) xuat=3;
    
   // Output
   if (xuat==0) {
         output_bit(LED1,0);
         output_bit(LED2,0);
         output_bit(LED3,0);
      }
   if (xuat==1) {
         output_bit(LED1,1);
         delay_ms(100);
         output_bit(LED1,0);
         delay_ms(100);
         output_bit(LED2,0);
         output_bit(LED3,0);
      } 
   if (xuat==2) {
         output_bit(LED1,0);
         output_bit(LED2,1);
         delay_ms(100);
         output_bit(LED2,0);
         delay_ms(100);
         output_bit(LED3,0);
      }
   if (xuat==3) {
         output_bit(LED1,0);
         output_bit(LED2,0);
         output_bit(LED3,1);
         delay_ms(100);
         output_bit(LED3,0);
         delay_ms(100);
      }
   
      //TODO: User Code
   }
   } // end while
   
} //end main
